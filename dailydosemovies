<script>
function generateIdeas() {
    let topic = document.getElementById('topic').value;
    if(topic === "") {
        alert("Please enter a topic");
        return;
    }

    let hooks = [
        `I tried ${topic} for 30 days`,
        `You wonâ€™t believe what happened with ${topic}`,
        `Top 10 secrets about ${topic}`,
        `How to start ${topic} with zero money`,
        `This ${topic} trick changed everything`,
        `I challenged myself to do ${topic}`,
        `The dark side of ${topic}`,
        `The truth behind ${topic}`,
        `No one talks about this in ${topic}`,
        `${topic} in 24 hours`
    ];

    let results = "";
    hooks.forEach((hook, index) => {
        results += `<div class="idea-box"><b>Idea ${index+1}:</b> ${hook}</div>`;
    });

    document.getElementById('result').innerHTML = results;
}
</script>

